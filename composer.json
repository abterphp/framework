{
  "name": "abterphp/framework",
  "description": "Foundations for AbterPHP",
  "authors": [
    {
      "name": "Peter Aba",
      "email": "peter@peteraba.com",
      "role": "Engineer"
    }
  ],
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "AbterPhp\\Framework\\": [
        "src",
        "tests"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-tokenizer": "*",
    "opulence/opulence": "^1.2",
    "filp/whoops": "^2.14",
    "league/flysystem": "^3.12",
    "cocur/slugify": "^4.3",
    "casbin/casbin": "^3.21",
    "casbin/database-adapter": "^1.8",
    "matthiasmullie/minify": "^1.3",
    "bjeavons/zxcvbn-php": "^1.3",
    "dflydev/apache-mime-types": "^1.0",
    "psr/http-message": "^1.0",
    "league/oauth2-server": "^8.3",
    "nyholm/psr7": "^1.5",
    "nyholm/psr7-server": "^1.0",
    "hackzilla/password-generator": "^1.6",
    "monolog/monolog": "^3.2",
    "swiftmailer/swiftmailer": "^6.2",
    "symfony/mailer": "^6.2",
    "phpseclib/mcrypt_compat": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "phpmd/phpmd": "^2.13",
    "phan/phan": "^5.4",
    "php-coveralls/php-coveralls": "^2.5",
    "mikey179/vfsstream": "^1.6"
  },
  "suggest": {
    "ext-http": "Allows better response codes tied to error message",
    "ext-redis": "Allows better caching"
  },
  "config": {
    "prefer-install": "dist"
  }
}
